<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp" >


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/no_image"
            android:onClick="onClick"
            android:contentDescription="@null" />


        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="14sp"
            android:layout_toEndOf="@id/product_image"
            android:text="bchdnjcnjdnnxj"
            android:textColor="@color/myTextPrimaryColor"
            android:ellipsize="marquee"
            android:singleLine="true" />


        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_toEndOf="@id/product_image"
            android:layout_below="@+id/product_name"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="300 gm" />


            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/divider"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dp" />


            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Qty 2" />


            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/divider"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_currency_inr_grey600_18dp"
                android:text="300"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/footer_layout"
            android:paddingTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="300"
                android:drawableStart="@drawable/ic_currency_inr_black_18dp"
                android:textColor="@color/myTextPrimaryColor"
                android:singleLine="true" />

            <TextView
                android:id="@+id/discounted_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="300"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:drawableStart="@drawable/ic_currency_inr_black_18dp"
                android:textColor="@color/myTextPrimaryColor"
                android:singleLine="true" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>